<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forget_page"
    android:orientation="vertical"
    android:background="@color/theme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0002">
        <include layout="@layout/toolbar_profile"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0004">

        <TextView
            android:layout_centerHorizontal="true"
            android:text="User Authentication"
            android:textColor="@color/button"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/andika_new_basic"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_no_text_l"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0001">

        <TextView
            android:text="Enter Phone Number"
            android:layout_marginLeft="@dimen/_50sdp"
            android:textColor="@color/button"
            android:layout_width="wrap_content"
            android:fontFamily="@font/andika_new_basic"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0002"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/l1"
            android:textColor="@color/button"
            android:paddingRight="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/school_name_Text"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/button"
                android:paddingRight="@dimen/_5sdp"
                android:background="@drawable/roundbox_edittext"
                android:fontFamily="@font/andika_new_basic"
                android:hint="+91"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/phone_number_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/button"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_5sdp"
                android:background="@drawable/roundbox_edittext"
                android:fontFamily="@font/andika_new_basic"
                android:hint="Phone Number"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:textColorHint="@color/grey" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/send_otp_button_l"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0002">

        <Button
            android:id="@+id/send_otp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/caveat_brush"
            android:padding="12dp"
            android:text="Send OTP"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/verfy_text_l"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0001">

        <TextView
            android:id="@+id/enter_verify_text"

            android:text="Enter Verifivation Code"
            android:layout_marginLeft="@dimen/_50sdp"
            android:textColor="@color/button"
            android:layout_width="wrap_content"
            android:fontFamily="@font/andika_new_basic"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/otp_text_l"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0002"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/l5"
            android:textColor="@color/button"
            android:paddingRight="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/otp_text1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/button"
                android:paddingRight="@dimen/_5sdp"
                android:background="@drawable/roundbox_edittext"
                android:fontFamily="@font/andika_new_basic"
                android:hint="Enter Otp"
                android:inputType="text"
                android:paddingLeft="12dp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:textColorHint="@color/grey" />


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/send_otp_button_l2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.0006"
        >

        <Button
            android:id="@+id/verifyButton2"

            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:fontFamily="@font/caveat_brush"
            android:padding="12dp"
            android:text="Verify OTP"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"/>

    </RelativeLayout>



</LinearLayout>