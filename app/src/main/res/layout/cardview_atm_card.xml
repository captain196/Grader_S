<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pay_card_image">

        </ImageView>
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_alignParentRight="true"
            android:background="@drawable/pay_button_background">
            
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <Button
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="match_parent"
                    android:text="Click to Pay"
                    android:background="@drawable/transparent"
                    android:textSize="@dimen/_8sdp"
                    android:textAllCaps="false">
        
                </Button>
            
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8">
            
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow">
                    
                </ImageView>
            
            </RelativeLayout>
            
            
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hanuman_regular"
                android:text="Yugant Verma"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/text_2">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maharishi Vidya Mandir"
                android:textSize="@dimen/_7sdp"
                android:textColor="#9CFFFFFF"
                android:fontFamily="@font/hanuman_regular"
                android:layout_marginTop="@dimen/_2sdp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hanuman_regular"
                android:text="Amount to be Paid"
                android:textSize="@dimen/_10sdp"
                android:textColor="#9CFFFFFF">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/rye"
                android:text="Rs. 2500"
                android:textColor="@color/text_2"
                android:textSize="@dimen/_20sdp">

            </TextView>

        </LinearLayout>

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/payment">

        </ImageView>

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/sun"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_30sdp">

        </ImageView>



    </RelativeLayout>

</RelativeLayout>