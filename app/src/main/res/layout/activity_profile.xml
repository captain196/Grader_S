<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@color/profile_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile"
        android:background="@color/profile_page"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:id="@+id/r1">


            <ImageView
                android:id="@+id/profile_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_back_2"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"/>

            <include layout="@layout/toolbar_profile"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/school_name"
                        android:text="Kendriya Vidhylay Balaghat (M.P)"
                        android:textSize="@dimen/_18sdp"
                        android:fontFamily="@font/langar"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/parent_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/school_name"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:fontFamily="@font/fredoka_one"
                        android:gravity="center"
                        android:text="Parent's Name"
                        android:textSize="@dimen/_13sdp">

                    </TextView>

                    <TextView
                        android:id="@+id/parent_name_text"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/parent_name"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/langar"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:background="@drawable/profile_text_box"
                        android:text="Susan Lee"
                        android:textColor="@color/button"
                        android:textSize="@dimen/_13sdp">

                    </TextView>

                    <TextView
                        android:id="@+id/Contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/parent_name_text"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/fredoka_one"
                        android:gravity="center"
                        android:text="Contact No."
                        android:textSize="@dimen/_13sdp">

                    </TextView>

                    <TextView
                        android:id="@+id/contact_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Contact_name"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/langar"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:background="@drawable/profile_text_box"
                        android:text="+91 987654321"
                        android:textColor="@color/button"
                        android:textSize="@dimen/_13sdp">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profile_photo_layout"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r1"
                    android:background="@drawable/profile_page_back"
                    android:paddingBottom="@dimen/_50sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp">

                    <ImageView
                        android:id="@+id/profile_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_logo"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/profile_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_photo"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/fredoka_one"
                        android:text="ID - 523232"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_id"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/kurale"
                        android:text="Shreya Patel"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_name"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/kurale"
                        android:text="9th 'A'"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="#FFFFFF" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/school_text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/fredoka_one"
                        android:gravity="center"
                        android:text="School Code"
                        android:textSize="@dimen/_13sdp">

                    </TextView>

                    <TextView
                        android:id="@+id/school_id_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/school_text_name"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/langar"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:background="@drawable/profile_text_box"
                        android:text="2356112"
                        android:textColor="@color/button"
                        android:textSize="@dimen/_13sdp">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/user_text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/fredoka_one"
                        android:gravity="center"
                        android:text="User Id"
                        android:textSize="@dimen/_13sdp">

                    </TextView>

                    <TextView
                        android:id="@+id/user_id_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_text_name"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/langar"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:background="@drawable/profile_text_box"
                        android:text="123455"
                        android:textColor="@color/button"
                        android:textSize="@dimen/_13sdp">

                    </TextView>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <TextView
                android:id="@+id/email_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/fredoka_one"
                android:gravity="center"
                android:text="Email Address"
                android:textSize="@dimen/_13sdp">

            </TextView>

            <TextView
                android:id="@+id/email_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/langar"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:background="@drawable/profile_text_box"
                android:text="shreypatel00@gmail.com"
                android:textColor="@color/button"
                android:textSize="@dimen/_13sdp">

            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <TextView
                android:id="@+id/Address_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/fredoka_one"
                android:gravity="center"
                android:text="User Id"
                android:textSize="@dimen/_13sdp">

            </TextView>

            <TextView
                android:id="@+id/Address_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Address_text_name"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/langar"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:background="@drawable/profile_text_box"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="dmmdlamdlmdl dandlamdla dnalnd"
                android:textColor="@color/button"
                android:textSize="@dimen/_13sdp">

            </TextView>

        </RelativeLayout>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>

